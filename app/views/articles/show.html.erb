<h1><%= @article.title %></h1>

<p>
  <% if is_locked?(@article) %>
    <%= form_with url: unlock_article_path(@article), method: "patch" do |f| %>
      輸入密碼：<%= f.text_field :pincode %>
      <%= f.submit "解鎖" %>
    <% end %>
  <% else %>
    <%= @article.content %>
  <% end %>
</p>

<section>
  <h4>留言區</h4>
  <%= form_with model: [@article, @comment] do |form| %>
    <%= form.text_area :content %>
    <%= form.submit "送出" %>
  <% end %>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= comment.content %>
      <%= link_to "[X]", comment, method: "delete", data: {confirm: "確認刪除"} %>
    </li>
  <% end %>
</ul>

</section>
