<li data-id="<%= article.id %>">
  <section class="p-3 mb-4 bg-gray-50">
    封面圖
    <%= image_tag article.cover_image.variant(resize_to_limit: [200, 200]) if article.cover_image.attached? %>
    <h2 class="text-xl"><%= article.title %></h2>
    <article class="text-sm">
      <%= article.content.truncate(100) %>
      ...繼續閱讀<br />
      tags:
      <% article.tags.each do |tag| %>
        <span class="px-3 text-xs bg-green-300 rounded-xl"><%= tag %></span>
      <% end %>
    </article>
  </section>
</li>
